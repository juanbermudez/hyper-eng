{
  "name": "hyper",
  "description": "Spec-driven development with local .hyper/ planning. 10 agents, 8 commands, 4 prose workflows, 11 skills (includes Hyper-Prose VM).",
  "version": "3.13.0",
  "author": {
    "name": "Juan Bermudez"
  },
  "homepage": "https://github.com/juanbermudez/hyper-eng",
  "repository": "https://github.com/juanbermudez/hyper-eng",
  "license": "MIT",
  "keywords": [
    "hyper-engineering",
    "spec-driven",
    "planning",
    "workflow-automation",
    "ai-powered",
    "hyper-prose"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PLUGIN_ROOT/scripts/track-activity.sh"
          }
        ]
      }
    ]
  }
}
